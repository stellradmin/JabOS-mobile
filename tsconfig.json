{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "types": ["jest", "@testing-library/jest-native"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "app/**/*.ts",
    "app/**/*.tsx",
    "types/**/*.d.ts",
    "**/*.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "tests/**",
    "__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "src/hooks/useAnimationCleanup.ts",
    "src/hooks/useAuthNavigation.ts",
    "src/hooks/useCardFlipAnimation.ts",
    "src/hooks/useCardGesturesRefactored.ts",
    "src/hooks/useContextSubscriptions.ts",
    "src/hooks/useEnhancedAccessibility.ts",
    "src/hooks/useEnhancedErrorHandling.ts",
    "src/utils/automated-leak-tests.ts",
    "src/utils/enhanced-auth-error-handler.ts",
    "src/utils/enhancedAccessibility.ts",
    "src/utils/production-security-validator.ts"
  ]
}
