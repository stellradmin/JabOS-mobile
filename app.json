{
  "expo": {
    "name": "Stellr",
    "slug": "stellr",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "stellr",
    "userInterfaceStyle": "automatic",
    "platforms": ["ios", "android"],
    "description": "Stellr - The astrology-based dating app that connects hearts through the cosmos. Find meaningful relationships guided by celestial compatibility.",
    "primaryColor": "#6366F1",
    "splash": {
      "image": "./assets/images/stellr.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F172A"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.stellr.datingapp",
      "buildNumber": "1",
      "associatedDomains": ["applinks:stellr.app"],
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Stellr requires camera access for identity verification with liveness detection. This ensures safe, authentic connections by verifying you are a real person.",
        "NSPhotoLibraryUsageDescription": "Stellr accesses your photos so you can select profile pictures. All photos undergo identity verification for your safety.",
        "NSPhotoLibraryAddUsageDescription": "Stellr can save photos to your library for your convenience.",
        "NSFaceIDUsageDescription": "Stellr uses Face ID for identity verification with liveness detection, ensuring all users are authentic for safer dating.",
        "NSLocationWhenInUseUsageDescription": "Stellr uses your location to show you potential matches nearby and improve your dating experience.",

        "NSContactsUsageDescription": "Stellr can access your contacts to help you find friends who are also using the app.",
        "CFBundleAllowMixedLocalizations": true,
        "UIBackgroundModes": ["background-fetch", "remote-notification"],
        "LSApplicationQueriesSchemes": ["instagram", "twitter", "spotify"]
      },
      "entitlements": {
        "com.apple.developer.associated-domains": ["applinks:stellr.app"],
        "com.apple.developer.applesignin": ["Default"]
      },
      "privacyManifests": {
        "NSPrivacyAccessedAPITypes": [
          {
            "NSPrivacyAccessedAPIType": "NSPrivacyAccessedAPICategoryUserDefaults",
            "NSPrivacyAccessedAPITypeReasons": ["CA92.1"]
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#6366F1"
      },
      "package": "com.stellr.datingapp",
      "versionCode": 1,
      "edgeToEdgeEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.WAKE_LOCK",
        "android.permission.VIBRATE",
        "android.permission.READ_CONTACTS",
        "com.google.android.c2dm.permission.RECEIVE",
        "android.permission.RECEIVE_BOOT_COMPLETED"
      ],
      "blockedPermissions": [
        "android.permission.SYSTEM_ALERT_WINDOW"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "stellr.app"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "config": {
        "googleMaps": {
          "apiKey": "[GOOGLE_MAPS_API_KEY]"
        }
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/stellr.png",
          "imageWidth": 320,
          "resizeMode": "contain",
          "backgroundColor": "#0F172A"
        }
      ],
      "@react-native-google-signin/google-signin",
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Stellr to access your photos for profile pictures. All photos undergo identity verification for your safety.",
          "cameraPermission": "Allow Stellr to use your camera for identity verification with liveness detection. This ensures authentic connections."
        }
      ],
      "expo-file-system",
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "15.1"
          },
          "android": {
            "enableHermes": true,
            "compileSdkVersion": 34,
            "targetSdkVersion": 34,
            "minSdkVersion": 23
          }
        }
      ],
      "expo-notifications",
      "expo-web-browser",
      "expo-localization"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "13a53cb4-f570-4dc8-977c-2d705152e163"
      }
    },
    "owner": "franciswade"
  }
}
