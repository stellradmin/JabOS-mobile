# Environment Configuration Template for Stellr Dating App
# Copy this file to .env.local and fill in your actual values
# NEVER commit files with real API keys or secrets

# ==============================================
# APPLICATION ENVIRONMENT
# ==============================================
NODE_ENV=development
EXPO_PUBLIC_ENV=development

# ==============================================
# API CONFIGURATION
# ==============================================
EXPO_PUBLIC_API_URL=http://localhost:3000
EXPO_PUBLIC_API_VERSION=v1
EXPO_PUBLIC_API_TIMEOUT=30000

# ==============================================
# SUPABASE CONFIGURATION (Required)
# ==============================================
EXPO_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ==============================================
# GOOGLE SERVICES
# ==============================================
# Google Sign-In Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com
# 1. Create OAuth 2.0 credentials
# 2. Web Client ID is for Supabase authentication
# 3. iOS Client ID is for native app sign-in
EXPO_PUBLIC_GOOGLE_SIGNIN_ENABLED=true
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=your-google-web-client-id.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID=your-google-ios-client-id.apps.googleusercontent.com
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ==============================================
# APPLE SERVICES
# ==============================================
EXPO_PUBLIC_APPLE_CLIENT_ID=com.stellr.datingapp

# ==============================================
# ANALYTICS & MONITORING (Optional)
# ==============================================
EXPO_PUBLIC_POSTHOG_API_KEY=phc_your-posthog-api-key
EXPO_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# ==============================================
# ERROR TRACKING (Recommended for Production)
# ==============================================
# Get these from: https://sentry.io → Create Project → Settings
# Enable Sentry for error monitoring and performance tracking
EXPO_PUBLIC_SENTRY_ENABLED=false
EXPO_PUBLIC_SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/your-project-id
EXPO_PUBLIC_SENTRY_ORG=your-org
EXPO_PUBLIC_SENTRY_PROJECT=your-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# ==============================================
# FEATURE FLAGS
# ==============================================
EXPO_PUBLIC_VIDEO_CALLS_ENABLED=false
EXPO_PUBLIC_PREMIUM_FEATURES_ENABLED=false
EXPO_PUBLIC_PUSH_NOTIFICATIONS_ENABLED=true

# ==============================================
# PERSONA IDENTITY VERIFICATION (Required)
# ==============================================
# Get these from https://withpersona.com dashboard
# Template ID from your Inquiry Template (starts with itmpl_)
EXPO_PUBLIC_PERSONA_TEMPLATE_ID=itmpl_YOUR_TEMPLATE_ID_HERE
# Environment: 'sandbox' for testing, 'production' for live
EXPO_PUBLIC_PERSONA_ENVIRONMENT=sandbox
# Public API key (safe to expose in client, starts with persona_)
EXPO_PUBLIC_PERSONA_API_KEY=persona_YOUR_PUBLIC_API_KEY_HERE
# Enable/disable Persona verification (set to false to use legacy photo verification)
EXPO_PUBLIC_PERSONA_VERIFICATION_ENABLED=true

# ==============================================
# CONTENT & ASSETS
# ==============================================
EXPO_PUBLIC_CDN_URL=http://localhost:3000/assets
EXPO_PUBLIC_IMAGE_QUALITY=medium

# ==============================================
# PUSH NOTIFICATIONS
# ==============================================
EXPO_PUBLIC_PUSH_NOTIFICATIONS_PROJECT_ID=your-expo-project-id

# ==============================================
# DEEP LINKING
# ==============================================
EXPO_PUBLIC_APP_SCHEME=stellr
EXPO_PUBLIC_DEEP_LINK_URL=http://localhost:3000

# ==============================================
# DEBUG & DEVELOPMENT
# ==============================================
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=debug
FLIPPER_DISABLE=false

# ==============================================
# REVENUECAT SUBSCRIPTIONS (Required for IAP)
# ==============================================
# CRITICAL: Set to 'true' to enable REAL payments (false = mock mode for testing)
EXPO_PUBLIC_PAYMENTS_ENABLED=true
# iOS API Key (starts with appl_)
EXPO_PUBLIC_REVENUECAT_IOS_KEY=appl_YOUR_IOS_KEY_HERE
# Android API Key (starts with goog_)
EXPO_PUBLIC_REVENUECAT_ANDROID_KEY=goog_YOUR_ANDROID_KEY_HERE

# ==============================================
# APP STORE & LEGAL
# ==============================================
EXPO_PUBLIC_PRIVACY_POLICY_URL=https://stellr.app/privacy
EXPO_PUBLIC_TERMS_OF_SERVICE_URL=https://stellr.app/terms
EXPO_PUBLIC_SUPPORT_EMAIL=support@stellr.app
EXPO_PUBLIC_APP_VERSION=1.0.0-dev

